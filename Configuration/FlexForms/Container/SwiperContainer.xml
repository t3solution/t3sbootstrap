<T3DataStructure>
	<sheets>
		<general>
			<ROOT>
				<sheetTitle>General</sheetTitle>
				<type>array</type>
				<el>
					<hidden>
						<label>Hiding / Display Elements</label>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0">
									<label>none</label>
									<value>0</value>
								</numIndex>
								<numIndex index="1">
									<label>Hidden only on xs</label>
									<value>d-none d-sm-block</value>
								</numIndex>
								<numIndex index="2">
									<label>Hidden on sm and down</label>
									<value>d-none d-md-block</value>
								</numIndex>
								<numIndex index="3">
									<label>Hidden on md and down</label>
									<value>d-none d-lg-block</value>
								</numIndex>
								<numIndex index="4">
									<label>Hidden on lg and down</label>
									<value>d-none d-xl-block</value>
								</numIndex>
								<numIndex index="5">
									<label>Hidden only on xl</label>
									<value>d-xl-none</value>
								</numIndex>
								<numIndex index="6">
									<label>Visible only on xs</label>
									<value>d-block d-sm-none</value>
								</numIndex>
								<numIndex index="7">
									<label>Visible sm and down</label>
									<value>d-block d-md-none</value>
								</numIndex>
								<numIndex index="8">
									<label>Visible md and down</label>
									<value>d-block d-lg-none</value>
								</numIndex>
								<numIndex index="9">
									<label>Visible lg and down</label>
									<value>d-block d-xl-none</value>
								</numIndex>
							</items>
							<default>0</default>
						</config>
					</hidden>
					<sliderStyle>
						<label>Slider Style</label>
						<onChange>reload</onChange>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0">
									<label>Default</label>
									<value>Default</value>
								</numIndex>
								<numIndex index="1">
									<label>Custom one</label>
									<value>CustomOne</value>
								</numIndex>
								<numIndex index="2">
									<label>Custom two</label>
									<value>CustomTwo</value>
								</numIndex>
							</items>
							<default>Default</default>
						</config>
					</sliderStyle>
					<width>
						<label>max. Image width</label>
						<config>
							<type>input</type>
							<size>4</size>
							<max>4</max>
							<default>576</default>
							<eval>int</eval>
							<checkbox>0</checkbox>
						</config>
					</width>
					<origImage>
						<label>Use Original Image</label>
						<config>
							<type>check</type>
						</config>
					</origImage>
					<ratio>
						<label>Image ratio - e.g.: 37:9</label>
						<config>
							<type>input</type>
							<size>4</size>
							<max>5</max>
							<default>16:9</default>
							<checkbox>0</checkbox>
						</config>
					</ratio>
					<slidesPerView>
						<label>Slides per view</label>
						<description>slides visible at the same time on slider's container (can be empty if you use breakpoints)</description>
						<displayCond>
							<and>
								<value1>FIELD:general.sliderStyle:=:Default</value1>
								<value2>FIELD:general.useCustomSwiperJs:=:0</value2>
							</and>
						</displayCond>
						<config>
							<type>number</type>
							<size>4</size>
							<default>4</default>
							<checkbox>0</checkbox>
						</config>
					</slidesPerView>
					<breakpoints10>
						<label>Slides per view - breakpoint > 10px</label>
						<description>breakpoints allows to set different parameter for different responsive breakpoints (screen sizes)</description>
						<displayCond>
							<and>
								<value1>FIELD:general.sliderStyle:=:Default</value1>
								<value2>FIELD:general.useCustomSwiperJs:=:0</value2>
							</and>
						</displayCond>
						<config>
							<type>number</type>
							<size>4</size>
							<default>1</default>
							<checkbox>0</checkbox>
						</config>
					</breakpoints10>
					<breakpoints576>
						<label>Slides per view - breakpoint > 576px</label>
						<displayCond>
							<and>
								<value1>FIELD:general.sliderStyle:=:Default</value1>
								<value2>FIELD:general.useCustomSwiperJs:=:0</value2>
							</and>
						</displayCond>
						<config>
							<type>number</type>
							<size>4</size>
							<default>2</default>
							<checkbox>0</checkbox>
						</config>
					</breakpoints576>
					<breakpoints768>
						<label>Slides per view - breakpoint > 768px</label>
						<displayCond>
							<and>
								<value1>FIELD:general.sliderStyle:=:Default</value1>
								<value2>FIELD:general.useCustomSwiperJs:=:0</value2>
							</and>
						</displayCond>
						<config>
							<type>number</type>
							<size>4</size>
							<default>3</default>
							<checkbox>0</checkbox>
						</config>
					</breakpoints768>
					<breakpoints992>
						<label>Slides per view - breakpoint > 992px</label>
						<displayCond>
							<and>
								<value1>FIELD:general.sliderStyle:=:Default</value1>
								<value2>FIELD:general.useCustomSwiperJs:=:0</value2>
							</and>
						</displayCond>
						<config>
							<type>number</type>
							<size>4</size>
							<default>4</default>
							<checkbox>0</checkbox>
						</config>
					</breakpoints992>
					<slidesPerGroup>
						<label>Slides per group</label>
						<description>set numbers of slides to define and enable group sliding</description>
						<displayCond>
							<and>
								<value1>FIELD:general.sliderStyle:=:Default</value1>
								<value2>FIELD:general.useCustomSwiperJs:=:0</value2>
							</and>
						</displayCond>
						<config>
							<type>number</type>
							<range>
								<lower>1</lower>
							</range>
							<size>4</size>
							<default>1</default>
							<checkbox>0</checkbox>
						</config>
					</slidesPerGroup>
					<spaceBetween>
						<label>Space between</label>
						<displayCond>
							<and>
								<value1>FIELD:general.sliderStyle:=:Default</value1>
								<value2>FIELD:general.useCustomSwiperJs:=:0</value2>
							</and>
						</displayCond>
						<config>
							<type>number</type>
							<size>4</size>
							<default>20</default>
							<checkbox>0</checkbox>
						</config>
					</spaceBetween>
					<loop>
						<label>Loop</label>
						<description>amount of slides in loop mode should be at least 2x of slidesPerView value.</description>
						<displayCond>
							<and>
								<value1>FIELD:general.sliderStyle:=:Default</value1>
								<value2>FIELD:general.useCustomSwiperJs:=:0</value2>
							</and>
						</displayCond>
						<config>
							<type>check</type>
						</config>
					</loop>
					<navigation>
						<label>Navigation</label>
						<displayCond>
							<and>
								<value1>FIELD:general.sliderStyle:=:Default</value1>
								<value2>FIELD:general.useCustomSwiperJs:=:0</value2>
							</and>
						</displayCond>
						<config>
							<type>check</type>
						</config>
					</navigation>
					<pagination>
						<label>Pagination</label>
						<displayCond>
							<and>
								<value1>FIELD:general.sliderStyle:=:Default</value1>
								<value2>FIELD:general.useCustomSwiperJs:=:0</value2>
							</and>
						</displayCond>
						<config>
							<type>check</type>
						</config>
					</pagination>
					<autoplay>
						<label>Autoplay</label>
						<displayCond>
							<and>
								<value1>FIELD:general.sliderStyle:=:Default</value1>
								<value2>FIELD:general.useCustomSwiperJs:=:0</value2>
							</and>
						</displayCond>
						<onChange>reload</onChange>
						<config>
							<type>check</type>
						</config>
					</autoplay>
					<delay>
						<label>Delay between transitions (in ms)</label>
						<displayCond>
							<and>
								<value1>FIELD:general.sliderStyle:=:Default</value1>
								<value2>FIELD:general.autoplay:=:1</value2>
								<value3>FIELD:general.useCustomSwiperJs:=:0</value3>
							</and>
						</displayCond>
						<config>
							<type>number</type>
							<size>4</size>
							<default>5000</default>
							<checkbox>0</checkbox>
						</config>
					</delay>
					<swiperCss>
						<label>Swiper Css</label>
						<displayCond>FIELD:general.sliderStyle:!=:Default</displayCond>
						<config>
							<type>text</type>
							<size>500</size>
							<max>9999</max>
							<default></default>
						</config>
					</swiperCss>
					<swiperJs>
						<label>Swiper JS</label>
						<displayCond>FIELD:general.sliderStyle:!=:Default</displayCond>
						<config>
							<type>text</type>
							<size>500</size>
							<max>9999</max>
							<default></default>
						</config>
					</swiperJs>
					<zoom>
						<label>Enable open in lightbox</label>
						<description>not working with a link inside the carousel content.</description>
						<config>
							<type>check</type>
						</config>
					</zoom>
					<useCustomSwiperJs>
						<label>Custom Swiper JS</label>
						<description>use your own Swiper JS</description>
						<displayCond>FIELD:general.sliderStyle:=:Default</displayCond>
						<onChange>reload</onChange>
						<config>
							<type>check</type>
						</config>
					</useCustomSwiperJs>
					<customSwiperJs>
						<label>your JS</label>
						<description>overwrites all the above settings</description>
						<displayCond>
							<and>
								<value1>FIELD:general.sliderStyle:=:Default</value1>
								<value2>FIELD:general.useCustomSwiperJs:=:1</value2>
							</and>
						</displayCond>
						<config>
							<type>text</type>
							<size>500</size>
							<max>9999</max>
							<default></default>
						</config>
					</customSwiperJs>
				</el>
			</ROOT>
		</general>
	</sheets>
</T3DataStructure>
