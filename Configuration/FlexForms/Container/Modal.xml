<T3DataStructure>
	<sheets>
		<general>
			<ROOT>
				<type>array</type>
				<TCEforms>
					<sheetTitle>LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:flexforms.settings</sheetTitle>
				</TCEforms>
				<el>
					<hidden>
						<TCEforms>
							<label>Hiding / Display Elements</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">none</numIndex>
										<numIndex index="1">0</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Hidden only on xs</numIndex>
										<numIndex index="1">d-none d-sm-block</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">Hidden on sm and down</numIndex>
										<numIndex index="1">d-none d-md-block</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">Hidden on md and down</numIndex>
										<numIndex index="1">d-none d-lg-block</numIndex>
									</numIndex>
									<numIndex index="4" type="array">
										<numIndex index="0">Hidden on lg and down</numIndex>
										<numIndex index="1">d-none d-xl-block</numIndex>
									</numIndex>
									<numIndex index="5" type="array">
										<numIndex index="0">Hidden only on xl</numIndex>
										<numIndex index="1">d-xl-none</numIndex>
									</numIndex>
									<numIndex index="6" type="array">
										<numIndex index="0">Visible only on xs</numIndex>
										<numIndex index="1">d-block d-sm-none</numIndex>
									</numIndex>
									<numIndex index="7" type="array">
										<numIndex index="0">Visible sm and down</numIndex>
										<numIndex index="1">d-block d-md-none</numIndex>
									</numIndex>
									<numIndex index="8" type="array">
										<numIndex index="0">Visible md and down</numIndex>
										<numIndex index="1">d-block d-lg-none</numIndex>
									</numIndex>
									<numIndex index="9" type="array">
										<numIndex index="0">Visible lg and down</numIndex>
										<numIndex index="1">d-block d-xl-none</numIndex>
									</numIndex>
								</items>
								<default>0</default>
							</config>
						</TCEforms>
					</hidden>
					<animation>
						<TCEforms>
							<label>LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:flexforms.animation</label>
							<config type="array">
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</animation>
					<size>
						<TCEforms>
							<label>LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:flexforms.modalsize</label>
							<config type="array">
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:default</numIndex>
										<numIndex index="1">default</numIndex></numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:small</numIndex>
										<numIndex index="1">modal-sm</numIndex></numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:large</numIndex>
										<numIndex index="1">modal-lg</numIndex></numIndex>
									<numIndex index="3" type="array">
											<numIndex index="0">Extra large</numIndex>
											<numIndex index="1">modal-xl</numIndex></numIndex>
									<numIndex index="4" type="array">
										<numIndex index="0">Fullscreen</numIndex>
										<numIndex index="1">modal-fullscreen</numIndex></numIndex>
								</items>
								<default>default</default>
							</config>
						</TCEforms>
					</size>
					<buttonText>
						<TCEforms>
							<label>Link or Button Text (header if empty)</label>
							<config>
								<type>input</type>
								<size>20</size>
								<default></default>
							</config>
						</TCEforms>
					</buttonText>
					<whiteclosebutton>
						<TCEforms>
							<label>White close button</label>
							<config type="array">
								<type>check</type>
								<default>0</default>
							</config>
						</TCEforms>
					</whiteclosebutton>
					<button>
						<TCEforms>
							<label>LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:flexforms.usebutton</label>
								<onChange>reload</onChange>
							<config type="array">
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</button>
					<style>
						<TCEforms>
							<label>LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:flexforms.buttonstyle</label>
							<displayCond>FIELD:general.button:=:1</displayCond>
							<config type="array">
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array"><numIndex index="0">LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:default</numIndex>
									<numIndex index="1">default</numIndex></numIndex>
									<numIndex index="1" type="array"><numIndex index="0">LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:primary</numIndex>
									<numIndex index="1">primary</numIndex></numIndex>
									<numIndex index="2" type="array"><numIndex index="0">LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:success</numIndex>
									<numIndex index="1">success</numIndex></numIndex>
									<numIndex index="3" type="array"><numIndex index="0">LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:info</numIndex>
									<numIndex index="1">info</numIndex></numIndex>
									<numIndex index="4" type="array"><numIndex index="0">LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:warning</numIndex>
									<numIndex index="1">warning</numIndex></numIndex>
									<numIndex index="5" type="array"><numIndex index="0">LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:danger</numIndex>
									<numIndex index="1">danger</numIndex></numIndex>
								</items>
								<default>default</default>
							</config>
						</TCEforms>
					</style>
					<fixedPosition>
						<TCEforms>
							<label>Fixed position</label>
							<onChange>reload</onChange>
							<displayCond>FIELD:general.button:=:1</displayCond>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">none</numIndex>
										<numIndex index="1">0</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Left browser edge</numIndex>
										<numIndex index="1">left</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">Right browser edge</numIndex>
										<numIndex index="1">right</numIndex>
									</numIndex>
								</items>
								<default>0</default>
							</config>
						</TCEforms>
					</fixedPosition>
					<rotate>
						<TCEforms>
							<label>Rotate the Button</label>
							<displayCond>
								<AND>
									<numIndex index="0">FIELD:general.button:=:1</numIndex>
									<numIndex index="1">FIELD:general.fixedPosition:!=:0</numIndex>
								</AND>
							</displayCond>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">0 degree</numIndex>
										<numIndex index="1">0</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">+ 90 degree</numIndex>
										<numIndex index="1">plus</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">- 90 degree</numIndex>
										<numIndex index="1">minus</numIndex>
									</numIndex>
								</items>
								<default>0</default>
							</config>
						</TCEforms>
					</rotate>
				</el>
			</ROOT>
		</general>
	</sheets>
</T3DataStructure>
